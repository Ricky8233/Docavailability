<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backg"
    tools:context=".Doctor_details"
    android:orientation="vertical">

    <TextView
        android:id="@+id/Doctor_Details"
        android:layout_width="match_parent"
        android:layout_height="92dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Doctor Details"
        android:textColor="#FFFCFC"
        android:textSize="40sp" />

    <ImageView
        android:id="@+id/my_avatar"
        android:layout_width="160dp"
        android:layout_height="154dp"
        android:layout_gravity="center_horizontal"
        android:adjustViewBounds="true"
        app:layout_collapseMode="parallax"
        app:layout_collapseParallaxMultiplier="0.7" />

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="430dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/rounded_background"
        android:orientation="vertical">

        <EditText
            android:id="@+id/Doctor_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_stroke"
            android:ems="10"
            android:gravity="center"
            android:hint="Doctor_ID"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="#74000000" />

        <EditText
            android:id="@+id/Doctor_speciality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_stroke"
            android:ems="10"
            android:gravity="center"
            android:hint="Doctor Speciality"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="#74000000" />

        <EditText
            android:id="@+id/Doctor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:background="@drawable/rounded_stroke"
            android:ems="10"
            android:gravity="center"
            android:hint="Doctor Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="#74000000" />
        <EditText
            android:id="@+id/Doctor_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal|center_vertical"
            android:layout_margin="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_stroke"
            android:ems="10"
            android:gravity="center"
            android:hint="Doctor Phone number"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textColorHint="#74000000" />

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center|center_vertical"
                android:text="Availability"
                android:textColor="#000000"
                android:textColorHint="#31FFFFFF"
                android:textSize="18sp" />

            <ToggleButton
                android:id="@+id/toggleButton_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center|right"
                android:layout_margin="5dp"
                android:layout_marginTop="50dp"
                android:layout_weight="1"
                android:background="@drawable/roundedbutton"
                android:gravity="center"
                android:hint="Available"
                android:text="Availability"
                android:textColor="#FDFDFD"
                android:textOff="Not available"
                android:textOn="Available" />

        </LinearLayout>

        <Button
            android:id="@+id/edit_doctor_details_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="bottom|center"
            android:layout_marginTop="20dp"
            android:background="@drawable/roundedbutton"
            android:text="@string/Proceed"
            android:textColor="#FDFDFD" />

    </LinearLayout>

</LinearLayout>