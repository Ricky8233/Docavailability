<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--ImageVIew to display our Course Image-->
            <ImageView
                android:id="@+id/doctor_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp" />

            <!--Text View to display Course Name-->
            <TextView
                android:id="@+id/Dn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/doctor_image"
                android:layout_toRightOf="@id/doctor_image"
                android:hint="Doctor's Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--Text VIew to display COurse Rating-->
            <!--Image used in present in drawable folder-->
            <TextView
                android:id="@+id/Speciality_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Dn"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/doctor_image"
                android:layout_toRightOf="@id/doctor_image"
                android:drawablePadding="2dp"
                android:hint="Speciality " />

            <Switch
                android:id="@+id/switch_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/Speciality_doctor"
                android:layout_alignBottom="@+id/doctor_image"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="195dp"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="9dp"
                android:layout_marginEnd="22dp"
                android:layout_marginRight="22dp"
                android:layout_marginBottom="2dp"
                android:layout_toEndOf="@+id/doctor_image"
                android:layout_toRightOf="@+id/doctor_image"
                android:text="Avilabilty" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>