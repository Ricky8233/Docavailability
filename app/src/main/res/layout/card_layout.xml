<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="220dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--ImageVIew to display our Course Image-->
            <ImageView
                android:id="@+id/doctor_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="10dp"
                android:contentDescription="@string/app_name"
                android:padding="5dp" />

            <!--Text View to display Course Name-->
            <TextView
                android:id="@+id/Dn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_toEndOf="@id/doctor_image"
                android:layout_toRightOf="@id/doctor_image"
                android:hint="Doctor's Name"
                android:textSize="18sp"
                android:textStyle="bold" />

            <!--Text VIew to display COurse Rating-->
            <!--Image used in present in drawable folder-->
            <TextView
                android:id="@+id/Speciality_doctor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Dn"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toEndOf="@id/doctor_image"
                android:layout_toRightOf="@id/doctor_image"
                android:drawablePadding="2dp"
                android:hint="Speciality " />

            <TextView
                android:id="@+id/F_id"
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_alignBottom="@+id/Speciality_doctor"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginEnd="182dp"
                android:layout_marginRight="182dp"
                android:layout_marginBottom="-41dp"
                android:text="Doctor_id" />

            <ToggleButton
                android:id="@+id/TB"
                android:layout_width="64dp"
                android:layout_height="47dp"
                android:layout_below="@+id/Dn"
                android:layout_alignStart="@+id/Speciality_doctor"
                android:layout_alignLeft="@+id/Speciality_doctor"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginStart="167dp"
                android:layout_marginLeft="167dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="41dp"
                android:layout_marginRight="41dp"
                android:text="ToggleButton" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>